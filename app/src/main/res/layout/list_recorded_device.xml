<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <ImageButton
        android:id="@+id/btn_delete_device"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_delete_24dp"
        />
    <ImageButton
        android:id="@+id/btn_modify_device"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_modify_24dp"
        android:layout_alignTop="@+id/btn_delete_device"
        android:layout_toStartOf="@+id/btn_delete_device" />

    <TextView
        android:id="@+id/tv_name_recordedDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/btn_modify_device"
        android:layout_alignTop="@+id/btn_modify_device"
        android:layout_alignParentLeft="true"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="" />

    <TextView
        android:id="@+id/tv_address_recordedDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/btn_modify_device"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@+id/btn_modify_device"
        android:textSize="14dp"
        android:text="000000000" />

</RelativeLayout>